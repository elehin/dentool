<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="dentoolPersistenceUnit"
		transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
         		<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://${env.POSTGRESQL_SERVICE_HOST}/dentool" /> <!-- BD Mane -->
          		<property name="javax.persistence.jdbc.user" value="${env.OPENSHIFT_POSTGRESQL_DB_USERNAME}" /> <!-- DB User -->
            		<property name="javax.persistence.jdbc.password" value="${env.OPENSHIFT_POSTGRESQL_DB_PASSWORD}" /> <!-- DB Password -->
            
            		<property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
            		<property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
		
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> <!-- DB Dialect -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>



</persistence>
